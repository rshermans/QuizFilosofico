@model IEnumerable<QuizFilosofico.Models.ItemDaPergunta>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Itens</h1>

<p>
    <a asp-action="Create">Criar Itens da Pergunta</a>
</p>

<div>
    <table>
        <thead>
            <tr>
                <th>
                    <form asp-action="Index">
                        @Html.DropDownList("PerguntaId", (SelectList)ViewBag.Perguntas, "Selecionar a Pergunta", new { onchange = "this.form.submit();" })
                    </form>
                </th>

            </tr>
        </thead>

    </table>

</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                Itens das Perguntas
                @*@Html.DisplayNameFor(model => model.Item)*@
            </th>
            <th>
                Correta
                @*@Html.DisplayNameFor(model => model.IsCorrect)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pergunta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCorrect)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pergunta.Id)
                    - @Html.DisplayFor(modelItem => item.Pergunta.Enunciado)
            </td>
                <td>
                    <div class="navbar-right">
                        <button type="button" class="btn btn-outline-success" data-bs-toggle="popover" title="Inicio" data-bs-content="Algumas-Edições">
                            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        </button>
                    </div>
                </td>
                <td>
                    <div class="navbar-right">
                        <button type="button" class="btn btn-outline-warning" data-bs-toggle="popover" title="Inicio" data-bs-content="Detalhes">
                            <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        </button>
                    </div>
                </td>
                <td>
                    <div class="navbar-right">
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="popover" title="Inicio" data-bs-content="Deletar">
                            <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
                        </button>
                    </div>
                </td>
        </tr>
}
    </tbody>
</table>
<div class="navbar-right">
    <button type="button" class="btn btn-outline-dark" data-bs-toggle="popover" title="Inicio" data-bs-content="Edições">
        <a class="nav-link text-dark" asp-area="" asp-controller="Organizacao" asp-action="Index">Voltar</a>
    </button>
</div>
