@model QuizFilosofico.Models.ItemDaPergunta

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<h3>Está certo que quer apagar isto?</h3>
<div>
    <h4>Item da Pergunta</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Item)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item)
        </dd>
        <dt class = "col-sm-2">
            É correta: @*@Html.DisplayNameFor(model => model.IsCorrect)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsCorrect)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pergunta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pergunta.Enunciado)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a Lista de Itens da Pergunta</a>
    </form>
</div>
