@model QuizFilosofico.Models.Partida

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar</h1>

<h4>Partida</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pontuacao" class="control-label"></label>
                <input asp-for="Pontuacao" class="form-control" />
                <span asp-validation-for="Pontuacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JogadorId" class="control-label"></label>
                <select asp-for="JogadorId" class ="form-control" asp-items="ViewBag.JogadorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="QuizzId" class="control-label">Tema</label>
                <select asp-for="QuizzId" class ="form-control" asp-items="ViewBag.QuizzId"></select>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a Lista de Partidas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
