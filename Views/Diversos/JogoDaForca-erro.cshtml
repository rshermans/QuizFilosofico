<div class="container">
    <h1>Jogo da Forca</h1>
    <h3>Palavra: @ViewBag.PalavraEscondida</h3>
    <h3>Tentativas Restantes: @ViewBag.TentativasRestantes</h3>
    <h3>Dicas:</h3>
    <ul>
        @foreach (var dica in ViewBag.Dicas)
        {
            <li>@dica</li>
        }
    </ul>
    <form method="post" asp-action="AdivinharLetra">
        <label for="letra">Digite uma letra:</label>
        <input type="text" name="letra" maxlength="1" />
        <button type="submit">Adivinhar</button>
    </form>
</div>